<style>
    .box-info{
        margin-bottom:10px;
    }
</style>
<!-- form start -->

<button type="submit" class="btn btn-success pull-left"  style="position:relative;top:-5px; padding-top:3px; padding-bottom: 3px;" ><span class="glyphicon glyphicon-floppy-save"></span> Save</button>
<a class="btn btn-primary" style="position:relative;top:-5px; padding-top:3px; padding-bottom: 3px;margin-left:5px;" href="/parameters/admin?username={{username}}&pass_hash={{pass_hash}}&process_hash={{process_hash}}"><span class="glyphicon glyphicon-alert"></span> Cancel</a>
<div class="box box-info">
    <!-- /.box-header 
    TODO: CARGAR VALORES DESDE PARAMS
    -->
    <div class="box-body">
        {% for item in items %}
            <div class="form-group">
                <label for="{{ item.attr }}" class="col-sm-2 control-label">{{ item.title }}</label>
                <div class="col-sm-10">
                    <input type="{{ item.type }}" class="form-control" id="input{{item.attr}}" name="{{ item.attr }}">
                </div>
            </div>
        {% endfor %}
    </div>
</div>     

<button type="submit" class="btn btn-success pull-left"  style="position:relative;top:-5px; padding-top:3px; padding-bottom: 3px;" ><span class="glyphicon glyphicon-floppy-save"></span> Save</button>
<a class="btn btn-primary" style="position:relative;top:-5px; padding-top:3px; padding-bottom: 3px;margin-left:5px;" href="/parameters/admin?username={{username}}&pass_hash={{pass_hash}}&process_hash={{process_hash}}"><span class="glyphicon glyphicon-alert"></span> Cancel</a>
<input type="hidden" name="redir" value="1">
