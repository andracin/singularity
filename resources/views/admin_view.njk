{% extends 'master_AdminLTE' %}{% block content %}
    <div id="jsGrid">
    </div>
{% endblock %}
{% block footer %}
    <script>
        // Gets data from controller
        var data = {{data| dump | safe}};
                $("#jsGrid").jsGrid({ width: "100%",
            height: "400px",
            inserting: true,
            editing: true,
            sorting: true,
            paging: true,
            data: data,
            fields: [
                {name: "id", type: "number", width: 20, validate: "required"},
                {name: "name", type: "number", width: 100},
                {name: "last_optimum_performance", type: "text", width: 70},
                {name: "last_optimum_date", type: "text", width: 150},
                {name: "last_block_time", type: "text", width: 70},

                //{name: "Country", type: "select", items: countries, valueField: "Id", textField: "Name"},
                //{name: "Married", type: "checkbox", title: "Is Married", sorting: false},
                {type: "control"}
            ]
        });
    </script>
{% endblock %}
